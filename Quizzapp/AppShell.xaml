<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Quizzapp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Quizzapp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Quizzapp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:QuizListPage}"
        Route="QuizListPage" >

        <Button x:Name="QuizListPageButton" Clicked="QuizListPageButton_Clicked"/>
    </ShellContent>
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:ManageQuizPage}"
        Route="ManageQuizPage" >
        <Button x:Name="AvailableQuizzesButton" Clicked="AvailableQuizzesButton_Clicked"/>
    </ShellContent>
  

</Shell>
