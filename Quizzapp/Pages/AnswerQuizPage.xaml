<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quizzapp.Pages.AnswerQuizPage"
             Title="Answer Quiz">
    <VerticalStackLayout>

        <StackLayout>
            <HorizontalStackLayout Margin="10" Padding="10">
                <Label x:Name="QuizTitleLabel" HorizontalTextAlignment="Start" Margin="0,0,300,0" FontAttributes="Bold" FontSize="20"/>
                <Label x:Name="NumbersLabel" HorizontalTextAlignment="End"/>
            </HorizontalStackLayout>
       
            <HorizontalStackLayout Margin="10,0,0,0" Padding="10,0,0,0">
                <Label Text="Created By:" Margin="0,0,10,0"/>
                <Label x:Name="AuthorLabel"/>

            </HorizontalStackLayout>
        </StackLayout>

        <VerticalStackLayout Padding="20" Spacing="10" VerticalOptions="Center">

            <Label x:Name="AnswerLabel" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="30"/>
            <Label Text="aa" x:Name="QuestionLabel"
            FontSize="50"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"/>

            <Entry x:Name="EntryAnswer"/>

        

            <Button Text="Submit" x:Name="Submit" Clicked="Submit_Clicked"/>

        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>